<Window x:Class="wpf_structLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_structLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_src" HorizontalAlignment="Left" Margin="10,84,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="390" Height="340" DataContextChanged="tb_src_DataContextChanged"/>
        <TextBox x:Name="tb_output" HorizontalAlignment="Left" Margin="405,84,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="385" Height="144"/>
        <Label x:Name="label" Content="Source Code" HorizontalAlignment="Left" Margin="140,53,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Struct Layout&#xD;&#xA;" HorizontalAlignment="Left" Margin="559,53,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dg_output" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="405,254,0,0" Loaded="dg_output_Loaded"/>

    </Grid>
</Window>
